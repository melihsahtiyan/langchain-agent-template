{
  "name": "agent-template-express-server",
  "version": "1.0.0",
  "description": "A TypeScript application for creating a Langchain agent using meta-llama.",
  "main": "src/agent.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "nodemon -L --watch 'src/**/*.ts' --exec 'ts-node' src/app.ts",
    "watch": "tsc -w",
    "docker:dev": "nodemon -L --watch 'src/**/*.ts' --exec 'ts-node' src/app.ts",
    "docker:prod": "npm run build && npm start"
  },
  "dependencies": {
    "@langchain/community": "^0.3.45",
    "@langchain/core": "^0.3.57",
    "@langchain/ollama": "^0.2.0",
    "chromadb": "^2.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-prom-bundle": "^8.0.0",
    "langchain": "^0.3.27",
    "mongoose": "^8.14.1",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "pg": "^8.13.3",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.21",
    "typescript": "^4.5.4",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-serve-static-core": "^5.0.6",
    "@types/multer": "^1.4.12",
    "@types/node": "^16.11.7",
    "@types/pdf-parse": "^1.1.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  },
  "repository": {
    "type": "git"
  },
  "keywords": [
    "langchain",
    "agent",
    "typescript",
    "meta-llama"
  ],
  "author": "Melih Sahtiyan",
  "license": "MIT"
}
